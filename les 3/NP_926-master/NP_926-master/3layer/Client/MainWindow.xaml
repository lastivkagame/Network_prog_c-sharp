<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="468.612">
    <Grid>
        <StackPanel Margin="10" Background="AliceBlue">
            <Label>Name</Label>
            <TextBox x:Name="tbName" Padding="10" />
            <Label>Phone</Label>
            <TextBox x:Name="tbPhone"  Padding="10" />
            <Label>Email</Label>
            <TextBox x:Name="tbEmail" Padding="10" />
            <Button Width="100" Height="30" Margin="10" Click="Button_Click">Save</Button>
        </StackPanel>
    </Grid>
</Window>
