<Window x:Class="Homework_6.DialogHelperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_6"
        mc:Ignorable="d"
        Title="Folder Name" Height="110" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="infotext" Margin="15,5" Text="Enter foldername" FontFamily="Cooper" TextAlignment="Center" Foreground="BurlyWood" />
            <TextBox x:Name="ResponseTextBox" Margin="15,0" BorderBrush="BurlyWood" BorderThickness="3"/>
            <Button Margin="15,5" Content="OK" Click="OKButton_Click" Background="BurlyWood" BorderBrush="BlanchedAlmond" BorderThickness="3" Foreground="White" FontFamily="Cooper" />
        </StackPanel>
    </Grid>
</Window>
